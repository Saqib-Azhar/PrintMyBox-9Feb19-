@using System.Text;
@model IEnumerable<Practicing_OAuth.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.SlugURL)
        </th>*@
        @*<th>
            @Html.DisplayNameFor(model => model.Description)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.IsEnabled)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image3)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image4)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image5)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UploadedDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {

    var productSlugCustom = item.SlugURL.Replace('_', '-');
    StringBuilder productbuilder = new StringBuilder(productSlugCustom);
    productbuilder.Replace("-&-", "-And-");
    productSlugCustom = productbuilder.ToString();
    <tr>
        <td>
            <a href="/@productSlugCustom">@Html.DisplayFor(modelItem => item.Name)</a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.SlugURL)
        </td>*@
        @*<td>
            @if (item.Product_Description.Length > 25)
            {
                item.Description = item.Product_Description.Substring(0, Math.Min(item.Description.Length, 25)) + "...";
                @Html.DisplayFor(modelItem => item.Product_Description)
            }
            else
            {
                @Html.DisplayFor(modelItem => item.Description)
            }
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.IsEnabled)
        </td>
        <td>
            <img alt="@item.Name" src="~/UploadedProductImages/@item.Image1" style="max-height:30px; max-width:30px" />
        </td>
        <td>
            <img alt="@item.Name" src="~/UploadedProductImages/@item.Image2" style="max-height:30px; max-width:30px" />
        </td>
        <td>
            <img alt="@item.Name" src="~/UploadedProductImages/@item.Image3" style="max-height:30px; max-width:30px" />
        </td>
        <td>
            <img alt="@item.Name" src="~/UploadedProductImages/@item.Image4" style="max-height:30px; max-width:30px" />
        </td>
        <td>
            <img alt="@item.Name" src="~/UploadedProductImages/@item.Image5" style="max-height:30px; max-width:30px" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UploadedDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category.CategoryName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
