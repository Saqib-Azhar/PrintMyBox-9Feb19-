@model IEnumerable<Practicing_OAuth.Models.ContactUsData>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
<h2>Inbox</h2>

<table class="table">
    <tr>
        <th>
            Sender Name
        </th>
        <th>
            Sender Email
        </th>
        <th>
            Contact No.
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Message)
        </th>
        <th>
            Submitted At
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model)
{
    if (item != null &&  item.Seen == true)
    {
        <tr>
            <td>
                <a href="/ContactUsDatas/Details/@item.Id">@Html.DisplayFor(modelItem => item.UserName)</a>
            </td>
            <td>
                <a href="/ContactUsDatas/Details/@item.Id">@Html.DisplayFor(modelItem => item.Email)</a>
            </td>
            <td>
                <a href="/ContactUsDatas/Details/@item.Id">@Html.DisplayFor(modelItem => item.PhoneNumber)</a>
            </td>
            <td>
                @if (item.Message != null && item.Message.Count() > 10)
                {
                    item.Message = item.Message.Substring(0, 10) + "...";
                }
                <a href="/ContactUsDatas/Details/@item.Id">@Html.DisplayFor(modelItem => item.Message)</a>
            </td>
            <td>
                <a href="/ContactUsDatas/Details/@item.Id">@Html.DisplayFor(modelItem => item.SubmittedTime)</a>
            </td>
            <td>
                <a href="/ContactUsDatas/TemporaryDelete/@item.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
    else
    {
        <tr>
            <td>
                <a href="/ContactUsDatas/Details/@item.Id"><b>@Html.DisplayFor(modelItem => item.UserName)</b></a>
            </td>
            <td>
                <a href="/ContactUsDatas/Details/@item.Id"><b>@Html.DisplayFor(modelItem => item.Email)</b></a>
            </td>
            <td>
                <a href="/ContactUsDatas/Details/@item.Id"><b>@Html.DisplayFor(modelItem => item.PhoneNumber)</b></a>
            </td>
            <td>
                @if (item.Message != null && item.Message.Count() > 10)
                {
                    item.Message = item.Message.Substring(0, 10) + "...";
                }
                <a href="/ContactUsDatas/Details/@item.Id"><b>@Html.DisplayFor(modelItem => item.Message)</b></a>
            </td>
            <td>
                <a href="/ContactUsDatas/Details/@item.Id"><b>@Html.DisplayFor(modelItem => item.SubmittedTime)</b></a>
            </td>
            <td>
                <a href="/ContactUsDatas/TemporaryDelete/@item.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }

}

</table>
    </div>